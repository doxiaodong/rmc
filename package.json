{
  "name": "rmc",
  "scripts": {
    "compile": "umi-lib build",
    "lint": "npm run prettier -- -l",
    "format": "npm run prettier -- --write",
    "prettier": "prettier \"packages/*/src/**/*.{ts,tsx}\"",
    "ci": "npm run lint && npm run types-test && npm run test && npm run compile",
    "doc": "umi-lib doc dev",
    "doc:deploy": "umi-lib doc build && umi-lib doc deploy",
    "test": "umi-test --coverage",
    "types-test": "tsc",
    "codecov": "cat ./coverage/lcov.info | codecov",
    "prepub": "npm run ci",
    "pub:beta": "lerna publish --canary --preid beta --yes",
    "pub": "lerna publish --yes",
    "bootstrap": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.2",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.17",
    "codecov": "^3.5.0",
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1",
    "shelljs": "^0.8.3",
    "umi-library": "^1.5.1",
    "umi-test": "^1.5.7"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run ci"
    }
  }
}
